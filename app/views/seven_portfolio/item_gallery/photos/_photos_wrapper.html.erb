<div class="row">
  <h3>Photos: </h3>

  <div>
    <% photos.each do |photo| %>
        <div id="photo_<%= photo.id %>">
          <%= photo.caption %> - <%= image_tag photo.image_url(:thumb) %>
          <%= link_to 'edit', seven_gallery.edit_gallery_photo_path(@item.item_gallery, photo) %> -
          <%= link_to 'delete', seven_gallery.gallery_photo_path(@item.item_gallery, photo), method: :delete, data: {confirm: 'Sure?'} %>
        </div>
    <% end %>
  </div>
</div>